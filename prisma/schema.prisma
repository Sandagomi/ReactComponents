generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int    @id @default(autoincrement()) // Auto-increment primary key
  email    String @unique                      // Unique email address
  password String                              // Hashed password
}
